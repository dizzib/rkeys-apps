fingers(k, tilt)
  .fingers
    transform   rotate(tilt * 10deg)
    .col-0
      margin-top  k * -0.5
    .col-1
    .col-3
      margin-top  k * 0.33
    .col-4
      margin-top  k * 0.75
    {block}

thumb(k, tilt)
  .thumb
    left        tilt * k * 0.75
    position    relative
    top         k * -0.5
    transform   rotate(tilt * 5deg)
    {block}

qwerty-l(k)
  .qwerty-l
    +fingers(k, 1)
      margin-left     k * 0.25
      .layout > div
        float       right
    +thumb(k, 1)
      .key
        float       right

qwerty-r(k)
  .qwerty-r
    +fingers(k, -1)
      margin-right  k * 0.25
    thumb(k, -1)
