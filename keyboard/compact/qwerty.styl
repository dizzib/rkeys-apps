fingers(k, angle)
  .fingers
    transform   rotate(angle)
    .col-0
      margin-top  k * 0.5
    .col-1
    .col-3
      margin-top  k * 0.33
    .col-4
      margin-top  k * 0.75
    {block}

qwerty-l(k)
  .qwerty-l
    key-size(k)
    +fingers(k, 10deg)
      margin-left k * 0.25
      .layout > div
        float       right
    .thumb
      .key
        float       right

qwerty-r(k)
  .qwerty-r
    key-size(k)
    +fingers(k, -10deg)
      margin-right  k * 0.25
