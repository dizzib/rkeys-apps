fingers(k, tilt)
  .key.h-150
    height    k * 1.5
  .lanes
    transform   rotate(tilt * 10deg)
    .lane-0
      margin-top  k * -0.5
    .lane-1
    .lane-3
      margin-top  k * 0.33
    .lane-4
      margin-top  k * 0.75
    {block}

thumb(k, tilt)
  .thumb
    position    relative
    left        k * tilt * 0.5
    top         k * -0.25
    transform   rotate(tilt * 5deg)
    .key
      height    k * 1.5
    {block}

qwerty-l(k)
  .qwerty-l
    .fingers
      float       right
    width       k * 8
    +fingers(k, 1)
      margin-left k * 0.25
      .lane
        float       right
    +thumb(k, 1)
      .key
        float       right

qwerty-r(k)
  .qwerty-r
    +fingers(k, -1)
      margin-right  k * 0.25
    thumb(k, -1)
