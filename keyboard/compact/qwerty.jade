mixin lanes(...lanes)
  .lanes.horizontal
    each l, i in lanes
      .lane.key-cols-1(class='lane-' + i)
        +keys(l)

mixin qwerty-l
  .qwerty-l.vertical
    .fingers.horizontal.layout.default
      .vertical
        +key('Tab tab').w-2.h-150
        +key('Shift_L shift').w-2.h-2
      +lanes("' 5 t g b", '4 r f v', '3 e d c', '2 w s x', '1 q a z')
    .fingers.horizontal.layout.1
      .vertical
        +key('|').w-2.h-150
        +key('^').w-2.h-2
      +lanes('" 5 % . +', '4 } ] "', "3 { [ '", '2 @ . ~', '1 ! . .')
    .thumb
      .layout.default
        +key('BackSpace bksp').w-2
      .layout.1
        +key('Delete del').w-2
      +key('layout-1 fn').w-3
      +key('Escape esc').w-2
      +key('Super_R super')

mixin qwerty-r
  .qwerty-r.vertical
    .fingers.horizontal.layout.default
      +lanes('; 6 y h n', '7 u j m', '8 i k ,', '9 o l .', '0 p - /')
      .vertical
        +key('Control_R ctrl').h-150.w-2
        +key('Shift_R shift').h-2.w-2
    .fingers.horizontal.layout.1
      +lanes('# 6 & . *', "7 < ( '", '8 > ) <', '9 ` . >', '0 . _ \\')
      .vertical
        +key('=').h-150.w-2
        +key('$').h-2.w-2
    .thumb
      +key('space', ' ').w-2
      +key('layout-1 fn').w-3
      +key('Return enter').w-2
      +key('Alt_R alt')
