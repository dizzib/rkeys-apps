mixin lane(n)
  .lane.key-cols-1(class='lane-' + n)
    block

mixin lanes(...lanes)
  each l, i in lanes
    +lane(i)
      +keys(l)

mixin qwerty-l
  .qwerty-l.vertical
    .fingers.horizontal.layout.default
      +lanes("F11 5 t g b", '4 r f v', '3 e d c', '2 w s x', '1 q a z')
      +lane(5)
        +key('Tab tab').w-2.h-2
        +key('Escape esc').w-2.h-2
      +lane(6)
        +key('Alt_L alt').h-2
        +key('Control_L ctrl').h-2
    .fingers.horizontal.layout.1
      +lanes('F11 F5 % = +', 'F4 } ] "', "F3 { [ '", 'F2 @ ~ `', 'F1 ! | .')
      +lane(5)
        +key('|').w-2.h-2
        +key('^').w-2.h-2
    .thumb
      +key('space', ' ').w-2
      +key('layout-1 fn').w-3
      +key('Shift_L shift').w-3

mixin qwerty-r
  .qwerty-r.vertical
    .fingers.horizontal.layout.default
      +lanes('F12 6 y h n', '7 u j m', '8 i k ,', '9 o l .', '0 p - /')
      +lane(5)
        +key('BackSpace bksp').h-2.w-2
        +key('Return enter').h-2.w-2
      +lane(6)
        +key('Alt_R alt').h-2
        +key('Control_R ctrl').h-2
    .fingers.horizontal.layout.1
      +lanes('F12 F6 & = *', "F7 < ( '", 'F8 > ) <', 'F9 ; : >', 'F10 # _ \\')
      +lane(5)
        +key('Delete del').h-2.w-2
        +key('$').h-2.w-2
    .thumb
      +key('space', ' ').w-2
      +key('layout-1 fn').w-3
      +key('Shift_R shift').w-3
