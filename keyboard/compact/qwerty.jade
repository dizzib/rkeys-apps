mixin layout(id, cols)
  .horizontal.layout(class=id)
    each col, i in cols
      .key-cols-1(class='col-' + i)
        +keys(col)

mixin qwerty-l
  .qwerty-l.vertical
    .horizontal
      .vertical.layout.default
        +key('Tab').w-2
        +key('Shift_L Shift').w-2.h-3
      .vertical.layout.1
        +key('|').w-2.h-2
        +key('"').w-2.h-2
      .fingers
        +layout('default', [ 't g b', 'r f v', 'e d c', 'w s x', 'q a z' ])
        +layout(1, [ '% 5 }', '$ 4 {', '# 3 `', '@ 2 ~', '! 1 \\' ])
      .vertical
        +key('Delete Del').h-2
    .thumb
      +key('Escape Esc').h-2.w-2
      +key('layout-1 sym').h-2.w-2
      +key('BackSpace Bksp').h-2

mixin qwerty-r
  .qwerty-r.vertical
    .horizontal
      .vertical
        +key('Alt_R Alt').h-2
      .fingers
        +layout('default', [ 'y h n', 'u j m', 'i k ,', 'o l .', 'p ; /' ])
        +layout(1, [ '^ 6 [', '& 7 ]', '* 8 -', '( 9 _', ') 0 =' ])
      .vertical.layout.default
        +key('Super_R Super').w-2
        +key('Shift_R Shift').w-2.h-3
      .vertical.layout.1
        +key('+').w-2.h-2
        +key('\'').w-2.h-2
    .thumb
      +key('space', ' ').h-2
      +key('layout-1 sym').h-2.w-2
      +key('Return').h-2.w-2
      +key('Control_R Ctrl').h-2
