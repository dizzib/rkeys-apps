@require 'mixin/keys'
@require './base'
@require '../mixin/numpad'
@require '../mixin/qwerty-r'
@require '../mixin/speakbar'

numpad()
qwerty-r(K)
speakbar()

.context > div
  float     left

.desk-switcher
  position    fixed
  right       0px
  bottom      0px
  height      K
  opacity     0.5
  z-index     200

.context, .f1-f12, .numpad
  margin      0 0 K K

.pad-1
  background  #222
  position    fixed
  z-index     50

.qwerty-r
  margin-left 2 * K

.speakbar
  background  green
  padding     K * 0.05

.edit
  key-color(label-up:yellow)
.firefox
  key-color(label-up:orange)
.vlc-player
  key-color(label-up:cyan)
