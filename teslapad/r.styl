@require 'mixin/keys'
@require './base'
@require '../qwerty/mixin'
@require '../speakeys/mixin'
@require '../typey/mixin'

qwerty-r(K)
speakbar()
typey()

.desk-switcher
  position    fixed
  right       0px
  bottom      0px
  height      K
  opacity     0.5
  z-index     200

.f1-f12, .numpad
  margin      0 0 K K

.pad-1
  background  #222
  position    fixed
  z-index     50

.root
  margin-left 2 * K

.speakeys
  background  green
  padding     K * 0.05
  position    fixed
  left        0px
  bottom      0px
  z-index     100

.edit
  key-color(label-up:yellow)
.firefox
  key-color(label-up:orange)
.vlc-player
  key-color(label-up:cyan)
