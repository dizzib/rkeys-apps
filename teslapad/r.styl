@require 'mixin/keys'
@require './base'
@require '../keyboard/standard/qwerty'
@require '../speakeys/mixin'

qwerty-r(K)
speakbar()

.desk-switcher
  position    fixed
  right       0px
  bottom      0px
  height      K
  opacity     0.5
  z-index     200

.numpad
  margin-left K

.pad-1
  background  #222
  position    fixed
  z-index     50

.root
  margin-left 2 * K

.speakeys
  background  green
  padding     K * 0.05
  position    fixed
  left        0px
  bottom      0px
  z-index     100
.speakeys.error
  background  red
.speakeys.live
  background  orange
