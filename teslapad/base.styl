@require 'mixin/keys'

K = 23mm

key-size(K)
key-color(up:black, label-up:white, down:yellow, label-down:black)

body
  background  #222
  color       white
  font-family arial
  width       30 * K

.qwerty-l
.qwerty-r
  .thumb
    opacity     0.5
    z-index     150

.root
  height      6 * K

.edit
  key-color(label-up:red)
.firefox
  key-color(label-up:orange)
.vlc-player
  key-color(label-up:cyan)
