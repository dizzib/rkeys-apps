extend /template/keys

include ../keyboard/standard/qwerty
include ../keyboard/compact/qwerty
include ./mixin/edit
include ./mixin/pad-2
include ./mixin/vlc-player

append head
  title teslapad - left hand
  +prevent-zoom
  +css('l.css')

append layout
  +pad-2
  .root.layout-horizontal
    .f1-f12.key-cols-2
      - for (var n = 1; n <= 12; n++)
        +key('F' + n)
    +show-if(activeWindowTitle='SWEEP')
      +vlc-player
    +qwerty-l
