extend /template/keys

include ../keyboard/compact/qwerty
include ../media/vlc-player
include ../speakeys/mixin
include ./mixin/browser
include ./mixin/edit
include ./mixin/vbox
include ./mixin/vim

append head
  title teslapad - left hand
  +prevent-zoom
  +css('l.css')

append layout
  .sidepad
    .scrollpad.horizontal
      .browser.key-cols-2
        +show-if(activeWindowTitle='Firefox|Vimperator|TigerVNC|HERBERT|ISAIAH|KANGO|ROO|SANDPIT')
          +firefox
        +show-if(activeWindowTitle='Dolphin|File Manager'): +file-manager
      +show-if(activeWindowTitle='\.pdf'): +zoom
      +show-if(activeWindowTitle='GVIM|Konsole|Terminal|^Vim|TigerVNC|TED'): +vim
      +show-if(activeWindowTitle='HERBERT|SANDPIT|SWEEP'): +vlc-player-compact
      .vertical
        +vbox
        +edit
  .root.horizontal
    .key-cols-2
      - for (var n = 1; n <= 10; n++)
        +key('F' + n)
    +show-if(activeWindowTitle='HERBERT|SANDPIT|SWEEP'): +vlc-player
    +qwerty-l
  .workspace-switcher
    +key('C+F12 fa-exchange')
  +speakeys

append script
  +script('/base.js')
  // include:LiveScript \../speakeys/mixin.ls
  // pending https://github.com/jadejs/jade/issues/939
